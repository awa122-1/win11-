<Window x:Class="ChromeOS_Transformer.UI.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launcher" Height="550" Width="750"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True"
        ShowInTaskbar="False">

    <Border x:Name="MainCard" CornerRadius="20" Background="#F2F2F2" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.25" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="25" Background="White" Height="50" Margin="10,10,10,30">
                <DockPanel>
                    <TextBlock Text="G" Foreground="Gray" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <TextBox x:Name="SearchBox" Text="Search your device, apps, web..." 
                             VerticalAlignment="Center" BorderThickness="0" FontSize="16" Foreground="#5F6368" Background="Transparent"/>
                </DockPanel>
            </Border>

            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                
                <Button Style="{StaticResource AppBtnStyle}" Tag="chrome" Click="App_Click">
                    <StackPanel>
                        <Border CornerRadius="40" Width="70" Height="70" Margin="0,0,0,10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/chrome.png"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="Chrome" HorizontalAlignment="Center" Foreground="#333"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource AppBtnStyle}" Tag="youtube" Click="App_Click">
                    <StackPanel>
                        <Border CornerRadius="40" Width="70" Height="70" Margin="0,0,0,10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/youtube.png"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="YouTube" HorizontalAlignment="Center" Foreground="#333"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource AppBtnStyle}" Tag="files" Click="App_Click">
                    <StackPanel>
                        <Border CornerRadius="40" Width="70" Height="70" Margin="0,0,0,10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/files.png"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="Files" HorizontalAlignment="Center" Foreground="#333"/>
                    </StackPanel>
                </Button>

            </WrapPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Light Mode" Click="Theme_Click" Tag="#F2F2F2" Padding="10,5" Margin="5"/>
                <Button Content="Dark Mode" Click="Theme_Click" Tag="#202124" Padding="10,5" Margin="5"/>
            </StackPanel>

            <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Click="Close_Click" Background="Transparent" BorderThickness="0" FontSize="18" Foreground="#999" Margin="0,-15,-15,0"/>
        </Grid>
    </Border>

    <Window.Resources>
        <Style x:Key="AppBtnStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>