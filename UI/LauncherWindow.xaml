<Window
    x:Class="ChromeOSLauncher.UI.LauncherWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ChromeOS Launcher"
    WindowStyle="None"
    WindowState="Maximized"
    Background="#FF202124"
    Loaded="Window_Loaded">

    <Grid>
        <!-- 顶部栏 -->
        <DockPanel Height="40"
                   VerticalAlignment="Top"
                   Background="#FF303134">
            <TextBlock
                Text="Chrome OS Launcher"
                Foreground="White"
                VerticalAlignment="Center"
                Margin="15,0"/>
        </DockPanel>

        <!-- 中央应用区 -->
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="40">

            <Button Content="Chrome"
                    Width="140"
                    Height="140"
                    Click="Chrome_Click"/>

            <Button Content="Notepad"
                    Width="140"
                    Height="140"
                    Click="Notepad_Click"/>

        </StackPanel>

        <!-- 底部 Dock -->
        <Border
            Height="80"
            VerticalAlignment="Bottom"
            Background="#FF303134"
            CornerRadius="20"
            Margin="40">

            <Grid VerticalAlignment="Center">
                <CheckBox
                    x:Name="AutoStartCheck"
                    Content="开机自动启动"
                    Foreground="White"
                    Margin="20"
                    Checked="AutoStart_Checked"
                    Unchecked="AutoStart_Unchecked"/>
            </Grid>

        </Border>
    </Grid>
</Window>
